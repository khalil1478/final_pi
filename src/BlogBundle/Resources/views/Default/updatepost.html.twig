{% extends '@Blog/Default/layout.html.twig' %}


{% block banner %}

{% endblock %}



{% block content %}
    <body class="bg-white">



    <section class="breadcrumb breadcrumb_bg">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-12">
                    <div class="breadcrumb_iner">
                        <div class="breadcrumb_iner_item">
                            <p>Home/ blog/ modifier un blog</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>



        <section class="tracking_box_area section_padding">
            <div class="container">
                <div class="row align-items-center justify-content-center">
                    <div class="col-lg-6">
                        <div class="tracking_box_inner">
                            {{ form_start(Form2,{'attr':{'class':'row tracking_form','novalidate':'novalidate'}}) }}
                            <div class="col-md-12 form-group">
                                Titre       {{ form_widget(Form2.title,{'attr':{'type':'text','class':'form-control','placeholder':'saisir un titre'}}) }}

                            </div>
                            <div class="col-md-12 form-group">
                                Description       {{ form_widget(Form2.description,{'attr':{'type':'textarea','class':'form-control','placeholder':'saisir description'}}) }}
                            </div>

                            <div class="col-md-12 form-group">
                                Photo    {{ form_widget(Form2.photo,{'attr':{'type':'text','class':'form-control','placeholder':'saisir photo'}}) }}
                            </div>
                            <div class="col-md-12 form-group">
                                {{ form_widget(Form2.Submit,{'attr':{'type':'text','class':'btn_3','placeholder':'ajouter un blog'}}) }}
                            </div>
                            {{ form_end(Form2) }}
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <img class="card-img rounded-0" style="width: 100%; height: 300px;" src="{{ asset('uplods/post/' ~ photo) }}" alt="">

                    </div>




                </div>

            </div>
        </section>


    </body>
{% endblock %}
































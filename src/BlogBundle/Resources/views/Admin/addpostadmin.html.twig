{% extends '@Blog/Admin/dashbord.html.twig' %}


{% block content %}



<body class="hold-transition skin-blue sidebar-mini">
<div class="wrapper">





    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->


        <!-- Main content -->
        <section class="content">
            <div class="row">


               <div class="row">
                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title"> ajouter un post</h3>
                         
                        </div>

                       
   
        <div class="row align-items-center justify-content-center">
            <div class="col-lg-6 ">
                <div class="tracking_box_inner">
                 <center>  
                    {{ form_start(Form,{'attr':{'class':'row tracking_form','novalidate':'novalidate'}}) }}
                     <div class="col-md-12 form-group">
                      {{ form_errors(Form.title) }}
         Titre       {{ form_widget(Form.title,{'attr':{'type':'text','class':'form-control','placeholder':'saisir un titre'}}) }}

                        </div>
                        <div class="col-md-12 form-group">
                         {{ form_errors(Form.description)}}
          Description       {{ form_widget(Form.description,{'attr':{'type':'textarea','class':'form-control','placeholder':'saisir description'}}) }}
                        </div>
                         {{ form_errors(Form.photo)}}
                        <div class="col-md-12 form-group">
      Photo    {{ form_widget(Form.photo,{'attr':{'type':'text','class':'form-control','placeholder':'saisir photo'}}) }}
                        </div>


                   
                    


                         

                        <div class="col-md-12 form-group">
             {{ form_widget(Form.Submit,{'attr':{'type':'text','class':'btn_3','placeholder':'ajouter un blog' ,'class':'btn btn-primary'}}) }}
                        </div>
                    {{ form_end(Form) }}
                    </center>
                </div>
            </div>

        </div>

    </div>

</section>

</div>
</div>
</body>
<!-- ./wrapper -->
{% endblock %}